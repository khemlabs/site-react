{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Next: Chrome Local",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "launch",
			"name": "Next: Firefox Local",
			"reAttach": true,
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "launch",
			"name": "Next: Firefox Proxy",
			"reAttach": true,
			"url": "http://site.local.khem.io",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "attach",
			"name": "Next: Attach Firefox Local",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "attach",
			"name": "Next: Attach Firefox Proxy",
			"url": "http://site.local.khem.io",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Next: Node",
			"restart": true,
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
			"port": 9229,
			"outFiles": ["${workspaceFolder}/.next/server/**/*.js"],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Next: Attach Nodemon",
			"restart": true,
			// "outFiles": ["${workspaceFolder}/.next/server/**/*.js"],
			"port": 9229
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach",
			"protocol": "auto",
			"port": 9229,
			"restart": true,
			"localRoot": "${workspaceFolder}/server",
			"remoteRoot": "/app/server",
			// "outFiles": ["${workspaceFolder}/src/pages/**/*.js"],
			"outFiles": ["${workspaceFolder}/.next/server/**/*.js"],
			"skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
		}
	],
	"compounds": [
		{
			"name": "Next: Full Chrome",
			"configurations": ["Next: Node", "Next: Chrome Local"]
		},
		{
			"name": "Next: Full Firefox",
			"configurations": ["Next: Node", "Next: Attach Firefox Local"]
		},
		{
			"name": "Next: Full Docker",
			"configurations": ["Docker: Attach", "Next: Firefox Proxy"]
		}
	]
}
